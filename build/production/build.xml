<?xml version="1.0" encoding="UTF-8" ?>
<project name="php3" default="build" basedir=".">

    <target name="vars">
        <php returnProperty="build.date" function="date">
            <param value="Y-m-d-H-i-s"/>
        </php>
        <property name="project.domain" value="domain_ultra"/>
        <resolvepath propertyName="target.dir" path="/Applications/MAMP/htdocs/phing/${build.date}"/>
        <resolvepath propertyName="symlink.dir" path="/Applications/MAMP/htdocs/phing/current"/>
        <echo msg="Source dir: ${project.basedir}"/>
        <echo msg="Target dir: ${target.dir}"/>
    </target>

    <target name="copy">
        <copy todir="${target.dir}">
            <fileset defaultexcludes="false" dir="${project.basedir}">
                <include name="**"/>
            </fileset>
            <filterchain>
                <replaceregexp>
                    <regexp pattern="{{domain}}" replace="php3.loc"/>
                </replaceregexp>
            </filterchain>
        </copy>
    </target>

    <target name="symlink">
        <symlink link="${symlink.dir}" target="${target.dir}" overwrite="true"/>
    </target>

    <target name="composer">
        <exec dir="${target.dir}" command="composer install" checkreturn="true" output="true"/>
    </target>

    <target name="migration">
        <exec dir="${target.dir}" command="php yii migrate" checkreturn="true" output="true"/>
    </target>

    <target name="build" depends="vars, copy, symlink, migration, composer"></target>
</project>